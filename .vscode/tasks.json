{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "owner": "parcel",
        "fileLocation": "relative",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": ".*Built in.*"
          }
        }
      }
    },
    {
      "label": "Create Component",
      "type": "shell",
      "command": "schematics @nll/schematics-preact:component --path=${input:componentPath} --name=\"${input:componentName}\"",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "componentName",
      "description": "Please Enter A Component Name",
      "default": "SomeComponent",
      "type": "promptString"
    },
    {
      "id": "componentPath",
      "description": "Select Location",
      "default": "src/components",
      "type": "pickString",
      "options": ["src/components", "src/routes"]
    }
  ]
}
